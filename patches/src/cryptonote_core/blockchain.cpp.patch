+	BIO* bio = BIO_new_mem_buf(res_key.str_ec_public_key.c_str(), res_key.str_ec_public_key.size());
+	if (bio) {
+	  m_oracle_public_key = PEM_read_bio_PUBKEY(bio, NULL, NULL, NULL);
+	  BIO_free(bio);
+	}
+      }
+    }
+  }
